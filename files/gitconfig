[diff]
	tool = vimdiff

[color]
	ui = auto

[core]
  editor = vim
  excludesfile = ~/.gitignore_global

[alias]
  # branch
	br = branch
  brd = branch -d
  brdf = branch -D
  brm = branch -m
  brv = branch -v

  # commit
	co = commit
  coa = commit --amend
  com = commit -m

  # checkout
	ch = checkout
  chb = checkout -b

  # cherry-pick
  chrp = cherry-pick

  # diff
  di = diff
  dis = diff --staged

  # log
  lo = log --oneline
	logd = log --graph --decorate --oneline
  lol = log --oneline -n

  # difftool
  dt = difftool
  dts = difftool --staged

  # pull
  pl = pull
  plr = pull --rebase

  # push
  ps = push
  pso = push origin
  psf = push -f
  psfo = push -f origin
  psuo = push -u origin

  # stash
  sth = stash
  stp = stash pop
  sts = stash show
  stl = stash list

  # status
	st = status

[includeIf "gitdir/i:~/projects/work/"]
  path = ~/projects/work/.gitconfig

[includeIf "gitdir/i:~/projects/home/"]
  path = ~/projects/home/.gitconfig

[includeIf "gitdir/i:~/projects/oss/"]
  path = ~/projects/oss/.gitconfig

[includeIf "gitdir/i:~/projects/rubycrutch/"]
  path = ~/projects/rubycrutch/.gitconfig
