# common
alias ls='ls -p -v --color=auto --group-directories-first'
alias l='ls -l'
alias la='ls -la'

# bundler
alias bi='bundle install'
alias be='bundle exec'

# rails
alias r='be rails'
alias rs='r server'
alias rc='r console'

# rspec
alias rtest='be rspec'
alias cov='COVERAGE=true rtest'

# docker
alias dc='docker-compose'
alias dcst='dc start'
alias dcstp='dc stop'
